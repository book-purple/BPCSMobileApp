<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VendorDetailsActivity">

    <TextView
        android:id="@+id/vendor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Vendor Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vendor_name"
        android:src="@drawable/default_img" />

    <TextView
        android:id="@+id/vendor_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_margin="10dp"
        android:text="Vendor Desc"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/provided_services_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vendor_desc"
        android:layout_margin="10dp"
        android:text="Provided Services"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/provided_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/provided_services_header"
        android:layout_margin="10dp"
        android:text="Provided Services ..."
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tags_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/provided_services"
        android:layout_margin="10dp"
        android:text="Tags"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tags_header"
        android:layout_margin="10dp"
        android:text="Tags ..."
        android:textColor="@color/black"
        android:textSize="14dp" />

    <Button
        android:id="@+id/enquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Enquire Now" />

</RelativeLayout>